<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="625dp"
    android:layout_gravity="center"
    android:background="#FAFAFA"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RoleTextGoBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/style_circle_background"
            android:gravity="center"
            android:text="@string/TextGoBack"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/RoleImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:contentDescription="@string/RoleImage"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/RoleTextPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/RoleTextPlayer"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/RoleTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center_horizontal"
            android:text="@string/RoleTextName"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RoleTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:text="@string/RoleTextDescription" />

    </LinearLayout>
</ScrollView>